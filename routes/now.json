{
  "version": 2,
  "builds": [
    {
      "src": "app.js",
      "use": "@now/node-server"
    }
  ],
  "routes": [
    {
      "src": "/tiendajuegos",
      "dest": "/app.js",
      "methods": ["GET"]
    },
    {
      "src": "/tiendajuegos",
      "dest": "/app.js",
      "methods": ["POST"]
    },
    {
      "src": "/tiendajuegos/(?<id>[^/]+)",
      "dest": "/app.js/?id=$id",
      "methods": ["DELETE"]
    },
    {
      "src": "/tiendajuegos/(?<id>[^/]+)",
      "dest": "/app.js/?id=$id",
      "methods": ["PUT"]
    },
    {
      "src": "/",
      "dest": "/app.js",
      "methods": ["GET"]
    }
  ]
}
